{
    "compilerOptions": {
      "module": "esnext",
      "lib": ["es6", "dom"],
      "target": "es6",
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "noEmit": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "declaration": true,
      "allowJs": true,
      "baseUrl": ".",
      "rootDir": ".",
      "types": ["node", "jest"]
    },
    "include": ["**/*.ts", "**/*.d.ts"],
    "exclude": ["**/node_modules", "__tests__", "dist"]
  }
  