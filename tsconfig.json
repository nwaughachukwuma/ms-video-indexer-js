{
    "compilerOptions": {
      "module": "es6",
      "lib": ["es6", "dom"],
      "target": "es6",
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "noEmit": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "declaration": true
    },
    "include": ["**/*.ts", "**/*.d.ts"],
    "exclude": ["**/node_modules", "__tests__", "dist"]
  }
  