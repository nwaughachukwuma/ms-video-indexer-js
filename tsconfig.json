{
    "compilerOptions": {
      "incremental": true,
      "target": "es6",
      "lib": ["es6", "dom"],
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./lib",
      "baseUrl": ".",
      "declaration": true,
      "noImplicitReturns": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["index.ts", "types.ts"],
    "exclude": ["node_modules", "lib"]
  }
  