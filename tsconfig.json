{
    "compilerOptions": {
      "module": "esnext",
      "lib": ["es6", "dom"],
      "target": "es6",
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "outDir": "./lib",
      "noEmit": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "declaration": true,
      "allowJs": true,
      "baseUrl": ".",
      "rootDir": ".",
      "types": ["node"],
      "checkJs": true,
      "incremental": true
    },
    "include": ["**/*.ts", "**/*.d.ts", "ava.test/**/*.js"],
    "exclude": ["**/node_modules", "lib"]
  }
  