{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "extraFileExtensions": [],
    "tsconfigRootDir": "./"
  },
  "ignorePatterns": [
    "node_modules/"
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": "warn",
    "prefer-const": "warn",
    "prefer-spread": "warn",
    "semi": 2
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
